@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body>   
    
    <!-- shop section -->

    <section class="shop_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    Kitaplar
                </h2>
            </div>
            <div class="row">
                <div class="container">
                    <div class="list-group list-group-horizontal flex-fill ">
                        <a href="/book/Index" class="list-group-item list-group-item-action @(Model.ActiveCategoryId == null ? "active list-group-item-light" : "")" aria-current="true">
                            Tümü
                        </a>

                        @foreach (var item in Model.CategoryList)
                        {
                            <a href="/book/Index/@item.CategoryId" class="list-group-item list-group-item-action
                            @(Model.ActiveCategoryId != null ? Model.ActiveCategoryId == item.CategoryId ? "active list-group-item-light" :"" :"")">@item.CategoryName</a>
                        }


                    </div>
                </div>               
                
                @foreach (var item in Model.BooktList)
                {
                    
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="box">
                            <div class="img-box">
                                <img src="@item.PicturePath" alt="">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    @item.Title
                                </h6>
                                <h6>
                                    @item.CategoryName
                                </h6>
                            </div>
                            <div class="new">
                                <a href="">
                                    <span>
                                        Kirala
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                    
                }                
                
            </div>            
        </div>
    </section>

    <!-- end shop section -->
   


    <!-- end info section -->

 

    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="/js/custom.js"></script>

</body>

</html>