@using LibraryManagementMvcUI.Areas.AdminPanel.Models.ApiTypes
@model AdminPanelUserItem

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/adminPanel/Home/Index" class="brand-link">
        <img src="/css/images/logo-removebg-preview.png" alt="Kütüphane Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Kütüphane Yönetim </span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/adminPanel/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="/adminPanel/Home/Index" class="d-block">@Model.FullName</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->

                <li class="nav-header">Yönetici Menu</li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-book"></i>
                        <p>
                            İçerik Yönetimi
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/AdminPanel/Category/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Kategoriler</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/AdminPanel/Book/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Kitaplar</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/AdminPanel/Author/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Yazarlar</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/AdminPanel/BorrowedBook/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Ödünç Kitaplar</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/AdminPanel/Reservation/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Rezerve Kitaplar</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/AdminPanel/User/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Kullanıcılar</p>
                            </a>
                        </li>
                    </ul>
                </li>

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>